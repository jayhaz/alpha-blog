<h1 align="center">Listing articles</h1>

  <%@articles.each do|a|%>
  <div class="row">
	  <div class="col-xs-8 col-xs-offset-2">
		  <div class="well well-lg">
			  <div class="article-title">
				  <%=link_to a.title, article_path(a)%>
				  <div class="article-body">
					  <%=truncate(a.description, length:40)%>
				  </div>
					<%=link_to "Edit Article", edit_article_path(a), class: "btn btn-xs btn-primary"%> 
					<%=link_to "Delete Article", article_path(a), class: "btn btn-xs btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete the article?"}%>
				</div>
			</div>
		</div>
	</div>
  <%end%> 
  